  <section id="uber-izual">
    <h2>Uber Izual</h2>
    <div class="images">
      <img src="images/uber_izual_sprite.png" alt="Uber Izual Classic Sprite">
      <img src="images/uber_izual_render.png" alt="Uber Izual D2R Render">
